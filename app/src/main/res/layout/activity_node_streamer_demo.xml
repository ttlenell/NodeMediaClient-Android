<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.nodemedia.nodemediaclient.NodeStreamerDemoActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入地址:" />

        <EditText
            android:id="@+id/editText_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:singleLine="true"
            android:text="rtsp://192.168.0.253/AmbaStreamTest" >

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输出地址:" />

        <EditText
            android:id="@+id/editText_output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:singleLine="true"
            android:text="rtmp://192.168.0.20/live/stream" >
        </EditText>
    </LinearLayout>

    <Button
        android:id="@+id/button_streaming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Streaming" />

    <EditText
        android:id="@+id/editText_ns_log"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:gravity="top"
        android:longClickable="false"
        android:textSize="10sp" />

</LinearLayout>